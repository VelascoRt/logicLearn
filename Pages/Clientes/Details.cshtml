@page
@model logicLearn.Pages.Clientes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Correo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cliente.Correo)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cliente.Inscripciones)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Nombre del Curso</th>
                    <th>Plan de pago</th>
                </tr>
                @foreach (var item in Model.Cliente.Inscripciones)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cursos.NombreCurso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PlanDePago.Nombre)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cliente.ClienteID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
